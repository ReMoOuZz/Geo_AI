<div class="results-outer">
  <div class="results-card" data-controller="quiz-results"
       data-quiz-results-score-value="<%= @quiz.score %>"
       data-quiz-results-total-value="<%= @total %>">


    <div class="trophy" data-quiz-results-target="trophy"></div>
    <div class="congratulations">Félicitations !</div>


    <div class="stars">
      <i class="fa-solid fa-star" style="color: #FFD43B;"></i>
      <i class="fa-solid fa-star" style="color: #FFD43B;"></i>
      <i class="fa-solid fa-star" style="color: #FFD43B;"></i>
    </div>

    <h1 class="score-display">
      <span data-quiz-results-target="scoreDisplay"><%= @quiz.score %></span>
      /
      <span id="total"><%= @total %></span>
    </h1>

    <div class="message" data-quiz-results-target="message">
      Excellent !!! Tu es vraiment bon en Géographie !
    </div>

    <%= link_to "Commence Ton Geo Battle!", new_game_path, class: "start-btn" %>
  </div>
</div>
